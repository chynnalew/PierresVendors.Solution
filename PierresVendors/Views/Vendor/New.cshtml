 @{
  Layout = "_Layout";
}
<div class="header">
  <h1>Add a Vendor</h1>
</div>
 <div class="shaded">
  <div class="form-group">
    <form action="/vendor" method="post">
      <label for="name" class="form-label">Vendor Name: </label>
      <input id="name" name="name" type="text" class="form-control" placeholder="name" required>
      <br>
      <label for="description" class="form-label">Vendor Description: </label>
      <input id="description" name="description" type="text" class="form-control" placeholder="description" required>
      <br>
      <button type="submit" class="btn btn-outline-success">Add Vendor</button>
    </form>
  </div>
 </div> 
