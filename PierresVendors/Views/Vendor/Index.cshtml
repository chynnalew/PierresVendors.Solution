@{
  Layout = "_Layout";
}
@using PierresVendors.Models;

<div class="header">
  <h1>Vendor List</h1>
</div>
<div class="shaded">
  <h1>Click a vendor to view their orders</h1>

  @if (@Model.Count == 0)
  {
    <h4><em>You don't have any vendors yet</em></h4>
  } 

  <ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendor/@vendor.Id'>@vendor.Name</a></li>
  }
  </ul>
  <a href="/vendor/new" class="btn btn-outline-success">Add a Vendor</a>
  <br>
  <p><a href='/' class="btn btn-outline-success">Back home</a></p>
</div>