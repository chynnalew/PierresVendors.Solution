@{
  Layout = "_Layout";
}
@using PierresVendors.Models;

<div class="conatiner">
  <h1>Vendor List</h1>

  @if (@Model.Count == 0)
  {
    <p>You don't have any vendors yet</p>
  } 

  <ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href='/vendor/@vendor.Id'>@vendor.Name</a></li>
  }
  </ul>

  <p><a href='/'>Back home</a></p>
</div>