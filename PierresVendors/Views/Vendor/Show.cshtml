@{
  Layout = "_Layout";
}

@using PierresVendors.Models;
<div class="header">
  <h1>Vendor Orders</h1>
</div>
<div class="shaded">
  <h1>@Model["vendor"].Name</h1>
  <p class="brown">Description: @Model["vendor"].Description</p>
  <h4>Order Log:</h4>
  @if (@Model["vendor"].Orders.Count == 0)
  {
    <p class="brown">This vendor hasn't ordered yet</p>
  }
  <ul>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Date : @order.Title</a></li>
  }
  </ul>
  <p><a href='/vendor/@Model["vendor"].Id/order/new' class="btn btn-outline-success">Add a new Order</a></p>
  <p><a href='/vendor' class="btn btn-outline-success">Return to Vendor List</a></p>
  <p><a href='/' class="btn btn-outline-success">Return to Main Page</a></p>
  <br>
  <p class="brown">The following action can NOT be undone! Don't click unless you're sure!</p>
  <form action='/vendor/@Model["vendor"].Id' method="post">
    <button type="submit" class="btn btn-outline-success">Delete this Vendor</button>
  </form>
</div>
